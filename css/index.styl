logo = #820200
/*Font*/
*
	text-shadow 1px 2px 5px black
@font-face
	font-family 'icomoon'
	src url('fonts/icomoon.eot?-1bk1pt')
	src url('fonts/icomoon.eot?#iefix-1bk1pt') format('embedded-opentype'),
		url('fonts/icomoon.woff?-1bk1pt') format('woff'),
		url('fonts/icomoon.ttf?-1bk1pt') format('truetype'),
		url('fonts/icomoon.svg?-1bk1pt#icomoon') format('svg')
	font-weight normal
	font-style normal
/*General*/
body
	background url('../img/bg.jpg')
	background-size cover
	background-position center
	background-repeat no-repeat
a
	color white
	text-decoration none
/*utilities*/
.-u
	font-size 1em
	font-weight lighter
	text-align center
	color #e2003e

.-V
	float left
	color red
	padding 0 0
	&:first-child
		color green

.-sb1:before
	font-family 'icomoon'
	content '\e606'

.-sb2:before
	font-family 'icomoon'
	content '\e603'

.-sb3:before
	font-family 'icomoon'
	content '\e604'

.-sb4:before
	font-family 'icomoon'
	content '\e609'
/*Carrito*/
.Car-link
	color white
	background #ca002f
	border-radius 0.5em
	font-size 1.1em
	font-weight bold
	text-decoration none
	padding 0.6em
	position fixed
	top 0
	right 0
	z-index 1
	-webkit-transition 0.5s
	&:before
		margin-right 0.5em
		font-family 'icomoon'
		content '\e60b'
	&:hover
		background #f00042

/* Section */
.Section
	background rgba(246, 245, 234,0.5);
	border-radius 0.5em
	width 95%
	margin 1em auto
	padding 1.2em 0.1em

.Elements
	width 95%
	margin 0 auto

.Elemento
	min-height 160px
	margin 0 auto
	position relative

.Element-title
	font-size 1.75em

.Element-imageContainer
	min-height 160px
	width 140px
	margin 0
	padding 0

.Element-image
	width 100%
	margin 0

.Element-description
	font-size 1.1em
	left 140px
	top 0
	color black
	margin 0 0.5em
	right 0
	position absolute
	text-align justify

.Details
	width 360px
	margin 0 auto
	position relative
	padding 1px
	border-bottom 1px solid black
	border-top 1px solid black

.Price
	position relative
	left 22%
	padding 0
	margin 0

.Button
	color white
	border-radius 0.9em
	padding 1em 1em
	position absolute
	right 0
	top 1px
	background green
	float right
	margin 0
	&:before
		margin-right 0.6em
		font-family 'icomoon'
		content '\e60a'

/*Footer*/
.Footer
	background rgba(0, 153, 255, 0)
	text-align center
	color rgba(0,0,0,1)
	padding 0.1em


.Created
	margin-top 3em
	margin-bottom 0
	font-size 1.3em
	text-shadow 3px px 7px black

.Powered
	font-size 1.3em
	margin-top 0
	text-shadow 3px 5px 7px black

.Author
	color rgba(255,255,255, 0.7)
	&:after
		color #e2003e
		content 'ï£¿'

.Master
	color rgba(255,255,255, 0.7)

.Contact-info
	width 390px
	font-size 1.3em
	margin 1.5em auto
	text-align center
.Contact
	width 100%
	padding 0em
	input
		width 55%
		position relative
		padding 0.5em 0.5em
		display block
		margin 0.5em auto
		border none
		text-align center
		border-radius 0.5em
	textarea
		resize none
		border none
		margin 0.5em auto
		border-radius 0.5em
	button
		color white
		border-radius 0.5em
		background #e2003e
		padding 0.5em 1em
		border none
		display block
		margin 0 auto 1.5em
#contenedor
	padding 0
	margin 0 auto
	width 250px
	position relative
#Text
	position absolute
	margin 0
	min-height 10px
	width 15px
	padding 0
	float left
	left 20px
	top 7px
	&:before
		font-size 1.1em
		font-family 'icomoon'
		content '\e605'

#Mail
	position absolute
	margin 0
	min-height 10px
	width 15px
	padding 0
	float left
	left 20px
	top 50px
	&:before
		font-size 1em
		font-family 'icomoon'
		content '\e600'