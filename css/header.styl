logo = #820200
/*Header*/
.Header
	padding 3em
	margin 0.8em 2.7em

.Header-title
	font-weight bold
	margin 1em 0 0 1em
	vertical-align top
	color black
	text-shadow 10px 10px 15px black
	padding 0

.Header-imageContainer
	float left
	width 110px
	left 0.5em
	top 45px
	margin 0
	padding 0
	position absolute
	vertical-align top

.Header-image
	margin 0
	width 100%
//  /*Main Menu*/
.MainMenu
	text-shadow 1px 10px 10px black
	position relative
	overflow hidden

.MainMenu-item
	list-style none
	padding 0.5em 0
	margin 0

.MainMenu-list
	display inline-block
	margin 0
	padding 0.5em 0

.sublist
	border-radius 1em
	padding 1em 0.3em
	font-size 0.8em
	color black
	text-decoration none
	-webkit-transition 0.5s
	&:before
		margin-right 0.6em
	&:hover
		background lightgray
		color #0092be
		list-style point